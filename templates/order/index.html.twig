{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Adress</th>
                <th>Adress_complement</th>
                <th>City</th>
                <th>Zip_code</th>
                <th>Country</th>
                <th>Phone_number</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.firstname }}</td>
                <td>{{ order.lastname }}</td>
                <td>{{ order.adress }}</td>
                <td>{{ order.adressComplement }}</td>
                <td>{{ order.city }}</td>
                <td>{{ order.zipCode }}</td>
                <td>{{ order.country }}</td>
                <td>{{ order.phoneNumber }}</td>
                <td>{{ order.email }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
